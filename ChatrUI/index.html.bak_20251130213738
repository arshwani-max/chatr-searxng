    <script>
        const searxBase = "http://localhost:8080";
        const inputEl   = document.getElementById("searchInput");
        const searchBtn = document.getElementById("searchBtn");
        const gpsBtn    = document.getElementById("gpsBtn");
        const gpsStatus = document.getElementById("gpsStatus");
        const premiumBtn = document.getElementById("premiumBtn");

        function openSearch(query) {
            if (!query) return;
            const url = searxBase + "/search?q=" + encodeURIComponent(query);
            window.location.href = url;
        }

        function showError(msg) {
            gpsStatus.textContent = msg;
        }

        function showPlan(name, price) {
            alert(
                name + " – " + price +
                "\n\nThis is a demo UI only.\nIntegrate Razorpay / Stripe / UPI in backend to activate real billing."
            );
        }

        async function getCity(lat, lon) {
            try {
                const url = `https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lon}`;
                const r = await fetch(url, { headers: { "Accept-Language": "en-IN" } });
                const d = await r.json();
                const a = d.address || {};
                return a.city || a.town || a.village || a.suburb || a.state || "";
            } catch (e) {
                return "";
            }
        }

        async function searchWithLocation() {
            const baseQuery = (inputEl.value || "").trim();
            if (!baseQuery) {
                alert("Type something to search.");
                return;
            }

            if (!navigator.geolocation) {
                openSearch(baseQuery);
                return;
            }

            gpsStatus.textContent = "Getting your GPS location…";

            navigator.geolocation.getCurrentPosition(async (pos) => {
                try {
                    const lat = pos.coords.latitude.toFixed(4);
                    const lon = pos.coords.longitude.toFixed(4);
                    let city = await getCity(lat, lon);
                    let finalQuery;

                    if (city) {
                        gpsStatus.textContent = `Searching around ${city} (${lat}, ${lon})…`;
                        finalQuery = `${baseQuery} near ${city}`;
                    } else {
                        gpsStatus.textContent = `Searching near ${lat}, ${lon}…`;
                        finalQuery = `${baseQuery} near ${lat},${lon}`;
                    }

                    openSearch(finalQuery);
                } catch (e) {
                    showError("Could not use GPS, running plain search.");
                    openSearch(baseQuery);
                }
            }, (err) => {
                showError("Permission denied for GPS – running plain search.");
                openSearch(baseQuery);
            }, { enableHighAccuracy: false, timeout: 8000, maximumAge: 60000 });
        }

        function simpleSearch() {
            const q = (inputEl.value || "").trim();
            if (!q) {
                alert("Type something to search.");
                return;
            }
            openSearch(q);
        }

        searchBtn.addEventListener("click", searchWithLocation);
        gpsBtn.addEventListener("click", searchWithLocation);
        premiumBtn.addEventListener("click", () => {
            alert("Chatr Seller Premium\n\nMonthly: ₹199\nYearly: ₹1,999\n\nBackend billing integration is your next step (Razorpay/Stripe/UPI).");
        });

        inputEl.addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
                searchWithLocation();
            }
        });
    </script>
